    \put(140,100){\makebox(0,0){\footnotesize $h(t)$}}
		\put(180,100){\line(1,0){80}}
		\put(220,120){\makebox(0,0){\footnotesize $y(t)$}}
	  % --- Sampler ---
	  \put(260,100){\line(2,1){30}} %x=90
	  \qbezier(263,115)(278,113)(280,100)
	  \put(280,100){\vector(0,-1){5}}
